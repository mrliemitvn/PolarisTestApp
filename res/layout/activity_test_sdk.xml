<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_small" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/margin_small"
            android:text="@string/environment_testing"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:padding="@dimen/margin_small"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tvConversionTest"
            style="@style/TextMode"
            android:text="@string/conversion_test" />

        <TextView
            android:id="@+id/tvInstallTest"
            style="@style/TextMode"
            android:text="@string/install_test" />

        <TextView
            android:id="@+id/tvOnlineOfflineTest"
            style="@style/TextMode"
            android:text="@string/online_offline_test" />

        <TextView
            android:id="@+id/tvDuplicationTest"
            style="@style/TextMode"
            android:text="@string/duplication_test" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvNormalMode"
                style="@style/TextMode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/normal_test" />

            <TextView
                android:id="@+id/tvPurchase"
                style="@style/TextMode"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@drawable/bg_blue_press_state"
                android:text="@string/purchase_test" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_green_state"
            android:padding="@dimen/margin_medium"
            android:text="@string/start"
            android:textSize="@dimen/textsize_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/verify"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etVerify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/verify"
                android:inputType="text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/em"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/em"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/suid"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etSuid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/suid"
                android:inputType="text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/pn"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/pn"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/sales"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/sales"
                android:inputType="number" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/fui"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etFUI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/fui"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/others"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/others"
                android:inputType="text" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/fai"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />

            <EditText
                android:id="@+id/etFAI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="3"
                android:hint="@string/fai"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>